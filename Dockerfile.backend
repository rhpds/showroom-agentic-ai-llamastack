FROM python:3.12-slim

# Set working directory
WORKDIR /app

# Copy backend files
COPY backend/ /app/

# Install Python dependencies
RUN pip install --no-cache-dir -r requirements.txt

# Copy configuration
# NOTE: This copies the example config for demo purposes.
# For real deployments, either:
#   1. Create config/assistant-config.yaml and add: COPY config/assistant-config.yaml /app/config/
#   2. Mount config at runtime (e.g., OpenShift ConfigMap mounted to /app/config/assistant-config.yaml)
RUN mkdir -p /app/config
COPY config/assistant-config-example.yaml /app/config/

ENV PORT=8080

# Expose port
EXPOSE 8080

RUN chmod -R a+rX /app

# Run the application
CMD ["python", "app.py"]
